# Source all .zsh files found within dotfiles subdirectories
source_shellfiles() {
  readonly shellfiles=($( \
    find $DOTFILES_DIR \
    -type f \
    -name "*.zsh" \
    -mindepth 2 -maxdepth 2 \
    ))

  for file in $shellfiles; do
    source "$file"
  done
}
source_shellfiles

# Adds fzf shell bindings, such as Ctrl-R replacement
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
